			<param name="focalPointX">0.5</param>
			<param name="focalPointY">0.5</param>
			<param name="focalPointZ">0</param>
			<param name="upDirectionX">0</param>
			<param name="upDirectionY">1</param>
			<param name="upDirectionZ">0</param>
